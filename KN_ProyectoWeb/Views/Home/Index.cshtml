
@model KN_ProyectoWeb.Models.Usuario

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}



<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
        <!-- Register -->
        <div class="card">
            <div class="card-body">
                <!-- Logo -->
                <div class="app-brand justify-content-center">
                    <a href="index.html" class="app-brand-link gap-2">

                        <img src="~/StaticFiles/img/Icono.png"
                        <span class="app-brand-text demo text-body fw-bolder">Iniciar Sesion</span>
                    </a>
                </div>


                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-primary" role="alert">
                        @ViewBag.Mensaje
                    </div>
                }



                <h4 class="mb-2"></h4>

                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new {@id = "FormIniciarSesion"}))
                {




                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>

                        @Html.TextBoxFor(x => x.CorreoElectronico, new { @class = "form-control" })

                    </div>
                    <div class="mb-3 form-password-toggle">
                        <div class="d-flex justify-content-between">
                            <label class="form-label" for="password">Contraseña</label>
                            <a href="@Url.Action("RecuperarAcceso", "Home")">
                                <small>Olvidó su contraseña?</small>
                            </a>
                        </div>
                        <div class="input-group input-group-merge">

                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-primary d-grid w-100" type="submit">Iniciar Sesion</button>
                    </div>
                }

                <p class="text-center">
                    <span>Nuevo en nuestra plataforma?</span>
                    <a href="@Url.Action("Registro", "Home")">
                        <span>Crear una cuenta</span>
                    </a>
                </p>
            </div>
        </div>
        <!-- /Register -->
    </div>
</div>


<script src="~/StaticFiles/js/IniciarSesion.js"></script>
